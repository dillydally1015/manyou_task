<%= link_to '新規タスク登録', new_task_path %>
<div class="sort">
  <%= form_with(url: sort_tasks_path, local: true) do |f| %>
    <%= select_tag :sort, options_for_select([["投稿が新しい順","created_at"],["終了期限が早い順","deadline"]]),
      { prompt: '並べ替え' } %>
    <%= submit_tag "絞り込み" %>
  <% end %>
</div>
<% @tasks.each do |task| %>
  <div class="task">
    <div class="task_header">
      <h4 class="task_name task_row"><%= task.name %></h4>
      <%= link_to '詳細', task_path(task.id), class: 'task_show' %>
      <%= link_to '編集', edit_task_path(task.id) %>
      <%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '削除してよろしいですか？' } %>
    </div>
    <div class="task_detail">
      <%= task.detail %>
    </div>
    <div class="task_deadline">
      <%= task.deadline %>
    </div>
  </div>
<% end %>

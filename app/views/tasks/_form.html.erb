<div class="task_form">
  <%= form_with(model: @task, local: true) do |f| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form_name">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name %>
    </div>
    <div class="form_detail">
      <%= f.label :detail, '詳細' %>
      <%= f.text_area :detail %>
    </div>
    <div class="form_submit">
      <%= f.submit '登録' %>
    </div>
  <% end %>
</div>
